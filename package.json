{
  "name": "@perfect-schema/standard-validators",
  "version": "2.0.0",
  "description": "Standard validators for Perfect Schema",
  "author": "Yanick Rochon <yanick.rochon@gmail.com>",
  "license": "ISC",
  "main": "src/validators.js",
  "browser": "dist/perfect-schema-std-val.min.js",
