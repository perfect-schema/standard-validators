{
  "name": "@perfect-schema/standard-validators",
  "version": "2.2.2",
  "description": "Standard validators for Perfect Schema",
  "author": "Yanick Rochon <yanick.rochon@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 8.2.1"
  },
  "scripts": {
    "test": "BABEL_ENV=test jest --forceExit --detectOpenHandles",
    "test-cov": "npm run test -- --coverage",
    "lint": "eslint src --fix",
    "prepublishOnly": "BABEL_ENV=production gulp"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:perfect-schema/standard-validators.git"
  },
  "keywords": [
    "perfect-schema",
    "model",
    "schema",
    "validation"
  ],
  "peerDependencies": {},
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@perfect-schema/base": "^2.5.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.14.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "jest": "^24.1.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "bail": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!var-validator)/"
    ]
  },
  "dependencies": {
    "email-regex": "^3.0.0"
  }
}
